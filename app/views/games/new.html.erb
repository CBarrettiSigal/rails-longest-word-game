<h1>THE BEST GAME. EVER.</h1>
<p>Find me in app/views/games/new.html.erb</p>
<ul class="list-inline">
<% @letters.each do |l| %>
  <li class="list-inline-item"><%= l %></li>
<% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="Word Here!">
  <input type="submit" value="Play!">
</form>
